<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.foods.OneitemFragment">


    <ImageView
        android:id="@+id/back_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/back" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/eat_1" />

    <TextView
        android:id="@+id/tv_main"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:text="Veggie tomato mix"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="170dp"
        android:layout_height="32dp"
        android:textSize="24dp"
        android:textColor="@color/red"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:text="N1,900"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_main_desc"
        android:layout_width="318dp"
        android:layout_height="23dp"
        android:layout_marginTop="120dp"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="left"
        android:text="Delivery info"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:layout_marginTop="165dp"
        android:textSize="16dp"
        android:textColor="@color/hint"
        android:gravity="left"
        android:text="Delivered between monday aug and thursday 20 from 8pm to 91:32 pm"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_add"
        style="@style/Button.Regular"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="47dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="53dp"
        android:background="@drawable/bg_red_button"
        android:text="Add to cart" />


</FrameLayout>