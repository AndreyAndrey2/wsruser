<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="18dp"
            android:fontFamily="@font/roboto"
            android:hint="Выберите адрес доставки"
            android:layout_marginTop="56dp"
            android:layout_marginStart="16dp"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/ic_send"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="84dp"/>

    <ImageView
        android:id="@+id/ic_search"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="17dp"/>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        style="@style/TabLayout"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_send"
        app:tabGravity="center"
        app:tabIndicator="@drawable/bg_tab_item_selected"
        app:tabIndicatorAnimationMode="elastic"
        app:tabIndicatorColor="@color/crayola"
        app:tabIndicatorGravity="stretch"
        app:tabMode="fixed"
        app:tabPaddingEnd="21dp"
        app:tabPaddingStart="21dp"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="@color/white"
        app:tabTextAppearance="@style/Text.TabLayout"
        app:tabTextColor="@color/gray"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:saveEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/eat_1"
        android:layout_width="156dp"
        android:layout_height="212dp"
        android:layout_marginTop="176dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/bg_white_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/eat_2"
        android:layout_width="156dp"
        android:layout_height="212dp"
        android:background="@drawable/bg_white_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="30dp"/>

    <ImageView
        android:id="@+id/food_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:src="@drawable/eat_1"
        app:layout_constraintBottom_toBottomOf="@+id/eat_1"
        app:layout_constraintEnd_toEndOf="@+id/eat_1"
        app:layout_constraintStart_toStartOf="@+id/eat_1"
        app:layout_constraintTop_toTopOf="@+id/eat_1" />

    <ImageView
        android:id="@+id/food_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eat_2"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/eat_2"
        app:layout_constraintEnd_toEndOf="@+id/eat_2"
        app:layout_constraintStart_toStartOf="@+id/eat_2"
        app:layout_constraintTop_toTopOf="@+id/eat_2" />

</androidx.constraintlayout.widget.ConstraintLayout>